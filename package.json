{
  "name": "lib-common-angular",
  "version": "0.0.10",
  "description": "Librería común de Angular para proyectos",
  "type": "module",
  "private": false,
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "prebuild": "npm run generate:dtos",
    "update:dtos": "npm run init:submodule && npm run update:submodule && npm run generate:dtos",
    "init:submodule": "git submodule update --init --recursive",
    "update:submodule": "git submodule update --remote --merge",
    "generate:dtos": "node lib-core-dtos/scripts/generate-typescript.js",
    "build:lib": "ng build lib-common-angular",
    "publish:npm": "npm run build:lib && cd dist/lib-common-angular && npm publish --access public",
    "lint": "ng lint"
  },
  "dependencies": {
    "@angular/platform-server": "^20.1.6",
    "@angular/ssr": "^20.1.5",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "@ngxs/devtools-plugin": "^20.1.0",
    "@ngxs/logger-plugin": "^20.1.0",
    "@ngxs/store": "^20.1.0",
    "@primeng/themes": "^20.0.1",
    "@tailwindcss/postcss": "^4.1.11",
    "chart.js": "^4.5.0",
    "express": "^5.1.0",
    "flag-icons": "^7.5.0",
    "ionicons": "^8.0.13",
    "jquery": "^3.7.1",
    "juliaositembackenexpress": "^1.2.4",
    "primeflex": "^4.0.0",
    "primeicons": "^7.0.0",
    "primeng": "^20.2.0",
    "prismjs": "^1.30.0",
    "quill": "^2.0.3",
    "swiper": "^11.2.10",
    "tailwindcss-primeui": "^0.6.1",
    "xlsx": "^0.18.5",
    "zone.js": "~0.15.1"
  },
  "peerDependencies": {
    "@angular/animations": "^20.1.6",
    "@angular/cdk": "^20.1.5",
    "@angular/common": "^20.1.6",
    "@angular/compiler": "^20.1.6",
    "@angular/core": "^20.1.6",
    "@angular/forms": "^20.1.6",
    "@angular/material": "^20.1.5",
    "@angular/platform-browser": "^20.1.6",
    "@angular/platform-browser-dynamic": "^20.1.6",
    "@angular/router": "^20.1.6",
    "@ionic/angular": "^8.7.2",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.1.5",
    "@angular/build": "^20.3.3",
    "@angular/cli": "^20.1.5",
    "@angular/compiler-cli": "^20.1.6",
    "ng-packagr": "^20.1.0",
    "typescript": "^5.9.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/juliaosistem/common-lib-angular"
  }
}