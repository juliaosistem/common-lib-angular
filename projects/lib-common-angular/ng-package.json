{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/lib-common-angular",
  "lib": {
    "entryFile": "src/public-api.ts",
    "styleIncludePaths": [
      "src/lib/styles",
      "./theme"
    ]
  },
  "assets": [
    { "input": "./src/lib/assets", "glob": "**/*", "output": "assets" },
    { "input": "./src/lib/styles", "glob": "global-styles.scss", "output": "styles" },
    { "input": "./theme", "glob": "**/*", "output": "theme" },
    "README.md"
  ],
  "allowedNonPeerDependencies": [
    "primeng",
    "primeicons",
    "primeflex",
    "tailwindcss",
    "tailwindcss-primeui"
  ]
}